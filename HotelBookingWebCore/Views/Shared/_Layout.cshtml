<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/toastr.min.css" rel="stylesheet" />
    <link href="~/css/all.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
   
    
    <!-- style -->
    <style>
        body {
            display: flex;
            background-color: #FAFAFB;
        }
        nav {
            background-color: var(--main-color);
            min-height: 100%;
            min-width: 4.5rem;
            max-width: 1rem;
            transition: all 500ms ease-in;
        }

            nav:hover {
                min-width: 7.2rem;
            }

            nav ul {
                width: 100%;
                height: 98vh;
                display: flex;
                padding: 0 0.3rem;
                flex-direction: column;
                align-items: center;
                justify-content: space-around;
            }

            nav img {
                min-width: 62%;
                height: 3rem;
            }

            nav li {
                display: flex;
                list-style: none;
                width: 52%;
                text-align: center;
                margin: 0 auto;
                padding: 10px 1px;
                transition: 500ms ease-in-out;
                font-family: var(--primary-font);
                transition-delay: 100ms;
            }

                nav li:nth-last-child(1) {
                    margin-top: 5px;
                }

            nav .pages-name {
                display: none;
                margin: 5px;
            }

            nav .fas, nav .far, nav .fal{
                font-size: 1.8rem;
            }

            nav li:hover {
                width: 108%;
                background-color: #fff;
                border-bottom-left-radius: 26%;
                border-top-left-radius: 26%;
                cursor: pointer;
            }

                nav li:hover .pages-name {
                    display: block;
                }

                nav li:hover .fas , nav  li:hover .far , nav li:hover .fal{
                    margin-left: 7px;
                }
    </style>
</head>
<body>
    <partial name="_sidebar.cshtml" />   
    <section>
        <div class="container">
            @RenderBody()
        </div>
    </section>
    @* <script src="https://kit.fontawesome.com/d8eeab8155.js" crossorigin="anonymous"></script> *@
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/js/toastr.min.js"></script>
    <script src="~/js/moment.js"></script>
    <script src="~/js/app.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @*<script src="~/js/site.js" asp-append-version="true"></script>*@
    @RenderSection("Scripts", required: false)
</body>
</html>
