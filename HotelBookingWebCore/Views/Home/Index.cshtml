    </div>


<div id="show_ModalBooking">
</div>
 <!--modal ends here-->
<!-- delete modal starts here -->
<!-- Trigger/Open The Modal -->
<!-- The Modal -->
<div id="deleteModal" class="deleteModal modal">
    <!-- Modal content -->
    <div class="modal-content">
        <div class="flex heading text-center">
            <img class="bin" src="~/images/bin.png" alt="bin">
            <h3>Delete Booking</h3>
        </div>
        <p>Are you Sure you want to delete it?</p>


        <div class="button-center">
            <button class="btn delete" onclick="DeleteBookingList()">Delete</button>
            <button class="btn available" onclick="DeleteBookingAndMakeitAvailable()">Delete & Make It Available</button>
        </div>
        <button class="close-btn" id="close" onclick="CloseOpenedModal('deleteModal')">Cancel</button>
    </div>
</div>

@section Scripts{ 
    <script src="~/js/Scripts/Home.js"></script>
}
